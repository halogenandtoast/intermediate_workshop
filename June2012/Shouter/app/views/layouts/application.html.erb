<!DOCTYPE html>
<html>
  <head>
    <title>Shouter</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <% flash.each do |key, value| -%>
      <div class="flash <%= key %>"><%= value %></div>
    <% end -%>

    <% if signed_in? %>
      Welcome <%= current_user.email %>
      <%= link_to "Sign out", sign_out_path, method: :delete %>
    <% end %>

    <%= yield %>

  </body>
</html>
